<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".activity.DaftarActivity">

    <TextView
        android:id="@+id/text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="DAFTAR"
        android:fontFamily="@font/calibri_bold"
        android:layout_marginTop="120dp"
        android:textColor="#FFF"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text2"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="22dp"
        android:text="Anda ingin mendaftar sebagai?"
        android:textStyle="italic"
        android:textColor="#333"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/bOrtu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_edit_login"
        android:fontFamily="@font/calibri_bold"
        android:layout_marginEnd="2dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="2dp"
        android:text="Orang Tua/Anak"
        android:textSize="21sp"
        app:layout_constraintEnd_toStartOf="@id/bTenagaKesehatan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text2" />

    <TextView
        android:id="@+id/bTenagaKesehatan"
        app:layout_constraintTop_toBottomOf="@id/text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bOrtu"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_edit_login"
        android:paddingHorizontal="10dp"
        android:paddingVertical="2dp"
        android:text="Tenaga Kesehatan"
        android:fontFamily="@font/calibri_bold"
        android:textSize="21sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>